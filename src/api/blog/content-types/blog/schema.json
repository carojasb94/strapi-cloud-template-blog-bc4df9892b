{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": "Blog posts for the website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true,
      "default": "Dra. Zaira"
    },
    "publishedAt": {
      "type": "datetime",
      "required": true
    },
    "readTime": {
      "type": "integer",
      "required": true,
      "default": 5
    },
    "tags": {
      "type": "json",
      "required": false
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "enumeration",
      "enum": ["salud-mental", "terapia", "bienestar", "tecnologia", "relaciones"],
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}
